<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TodoList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TodoList"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarTitleColor="LightCyan"
    Title="TodoList"    
    TabBarBackgroundColor="{StaticResource Primary}"
    TabBarForegroundColor="{StaticResource Secondary}"
    TabBarUnselectedColor="{StaticResource Gray500}">

    <TabBar>
        <Tab Title="Calendar" Icon="calendar.png">
            <ShellContent ContentTemplate="{DataTemplate local:CalendarPage}" />
        </Tab>
        <Tab Title="To-Do List" Icon="todo.png">
            <ShellContent ContentTemplate="{DataTemplate local:TodoListPage}" />
        </Tab>
        <Tab Title="Categories" Icon="category.png">
            <ShellContent ContentTemplate="{DataTemplate local:CategoriesPage}" />
        </Tab>
    </TabBar>

</Shell>
