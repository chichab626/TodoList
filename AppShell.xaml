<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TodoList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TodoList"
    Shell.FlyoutBehavior="Disabled"
    Title="TodoList"    
    TabBarBackgroundColor="DarkBlue"
    TabBarForegroundColor="White"
    TabBarUnselectedColor="LightGray">

    <TabBar>
        <Tab Title="About" Icon="about_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:AboutPage}" />
        </Tab>
        <Tab Title="To-Do List" Icon="todo_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:TodoListPage}" />
        </Tab>
        <Tab Title="Categories" Icon="categories_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:CategoriesPage}" />
        </Tab>
    </TabBar>

</Shell>
